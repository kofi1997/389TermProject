
import java.io.*;
import java.net.*;
import java.nio.file.Files;
import java.util.*;
import java.util.logging.*;
import java.util.LinkedList;
import java.lang.Thread;

public class MultiThreading implements Runnable {

	LinkedList<Words> dict_temp = new LinkedList<Words>();
	String temp_def;
	String temp_word;
	int action;
	
	
	MultiThreading (LinkedList<Words> dict, String word, String def, int ans) {
		dict_temp = dict;
		temp_def = def;
		temp_word = word;
		action = ans;
	}
	MultiThreading (LinkedList<Words> dict, String word, int ans) {
		dict_temp = dict;
		temp_word = word;
		action = ans;
	}
	@Override
	public void run() {
		System.out.println("Thread: Server is working");
		try {
			Thread.sleep(3000);
			
			if (action == 1) {
				Words entry = new Words(temp_word,temp_def);
				dict_temp.add(entry);
				System.out.println("Word is added");
			}
			else if (action == 2) {
				int x;
				for (x = 0; x < dict_temp.size(); x++) {
					if ((dict_temp.get(x).word).equals(temp_word)){
						dict_temp.remove(dict_temp.get(x));
						System.out.println(temp_word + " has been removed");
						return;
					}
				}
				if (x == dict_temp.size()) System.out.println(temp_word + " does not exist in dictionary.");
				if (dict_temp.size() == 0) System.out.println("Dictionary is empty.");
			}
			
		} catch (InterruptedException e) {
			System.err.println("Thread: Server was interrupted");
		}
	}
}
